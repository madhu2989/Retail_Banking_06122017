<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.js">
</script>

<script type="text/javascript">
@*</script> charset="utf8">*@
    $(document).ready(function () {

        $('#table1').prepend($("<thead></thead>").append($(this).find("tr:first"))).dataTable();
    });
</script>
<link rel="stylesheet" href="~/Content/css/bootstrap.css" />
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<table class="table-bordered table-striped" id="table1">
    <thead>
        <tr class="btn-primary">
            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepositAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountStatus)
            </td>
            <td>
                @Html.ActionLink("Deposit", "deposit", new { id = item.AccountId, balamt = item.DepositAmount }, new { @class = "btn btn-success" }) 
                @Html.ActionLink("Withdraw", "withdraw", new { id = item.AccountId, balamt = item.DepositAmount }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Transfer", "Transfer", new { id = item.AccountId, cid = item.CustomerID, acctype = item.AccountType, bal = item.DepositAmount }, new { @class = "btn btn-info" })
            </td>
            
        </tr>
    }

</table>
