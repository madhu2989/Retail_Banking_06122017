<a href="javascript:void(0);" onclick="history.go(-1);">Back</a>
<h4 style=" text-align:center;color:green">@TempData["amtdepositmincurrent"]</h4>
<h4 style=" text-align:center;color:green">@TempData["Messageofdeleteaccount"]</h4>
<h4 style=" text-align:center;color:green">@TempData["maxaccount"]</h4>
<h4 style=" text-align:center;color:green">@TempData["messagetwoacc"]</h4>
<h4 style=" text-align:center;color:green">@ViewBag.Message</h4>
<h4 style=" text-align:center;color:green">@TempData["amtdepositmin"]</h4>
<h4 style=" text-align:center;color:green">@TempData["cannotdelete"]</h4>


<table class=" table-bordered table-striped" id="table1">
    <tr>
        <th>
            @Html.DisplayName("Account Id")
        </th>
        <th>
            @Html.DisplayName("Customer ID")
        </th>
        <th>
            @Html.DisplayName("Account Type")
        </th>
        <th>
            @Html.DisplayName("Available Balance(Rs)")
        </th>
        <th>
            @Html.DisplayName("Account Status")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountStatus)
            </td>
            <td>
                @if (item.DepositAmount == 0 && item.AccountStatus == "ACTIVE")
                {
                    @Html.ActionLink("Delete", "deleteaccount", new { cusid = item.CustomerID, accid = item.AccountId, balamt = item.DepositAmount, acctype = item.AccountType }, new { @class = "btn btn-danger" })
                }


            </td>
        </tr>
    }

</table>
