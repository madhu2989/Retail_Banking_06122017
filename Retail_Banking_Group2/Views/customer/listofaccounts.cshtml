@model IEnumerable<Retail_Banking_Group2.Models.sp_viewaccounttablewithstatus_Result>

@{
    ViewBag.Title = "listofaccounts";
    Layout = "~/Views/Shared/layoutafterexecutive.cshtml";
}
<h2 style="text-align:center;color:navy">List of accounts</h2>
@ViewBag.userName

