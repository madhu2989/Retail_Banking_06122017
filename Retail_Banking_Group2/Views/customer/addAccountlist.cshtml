<body>



    @*<div style="margin:"></div>*@
    <table class="table-bordered table-striped" id="table1">
        <thead>
            <tr class="btn-primary">
                <th>
                    @Html.DisplayName("CustomerID")
                </th>
                <th>
                    @Html.DisplayName("Aadhaar Number")
                </th>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Date Of Birth")
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.AddressLine2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>*@
                <th>
                    @Html.DisplayName("Contact Number")
                </th>
                <th>
                    @Html.DisplayName("Email ID")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoofAccounts)
                </th>
                <th>
                    @Html.DisplayName("Status")
                </th>
                <th>
                    @Html.DisplayName("Action")
                </th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AadhaarID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>

                    @Convert.ToString(string.Format("{0:MM/dd/yyyy}", item.Dob))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.AddressLine2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.NoofAccounts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerStatus)
                </td>
        
                <td>
                    @if (item.NoofAccounts != 2)
                    {
                      
                        @Html.ActionLink("Add Account", "addaccountfromlist", new { id = item.CustomerID, noofacc = item.NoofAccounts }, new { @class = "btn btn-info" })
                        
                    }
                    
               
                </td>
            </tr>
        }

    </table>

</body>
